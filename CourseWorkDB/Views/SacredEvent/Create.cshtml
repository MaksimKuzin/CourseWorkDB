                <input asp-for="FinishDate" class="form-control" />
                <span asp-validation-for="FinishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transport" class="control-label"></label>
                <input asp-for="Transport" class="form-control" />
                <span asp-validation-for="Transport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Route" class="control-label"></label>
                <input asp-for="Route" class="form-control" />
                <span asp-validation-for="Route" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceOfFunding" class="control-label"></label>
                <input asp-for="SourceOfFunding" class="form-control" />
                <span asp-validation-for="SourceOfFunding" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
